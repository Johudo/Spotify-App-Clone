{
    "name": "spotify-app",
    "version": "1.0.0",
    "description": "Clone of Spotify App",
    "main": "index.js",
    "scripts": {
        "build-client": "webpack --mode production",
        "build-server": "tsc --project src/server/",
        "dev-client": "webpack-dev-server --mode development --devtool inline-source-map ",
        "dev-server": "nodemon -e ts -w ./src/server -x npm run watch:server",
        "watch:server": "ts-node --project src/server/tsconfig.json src/server/server.ts",
        "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
        "build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run build-server\" \"npm run build-client\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.17.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@svgr/webpack": "^5.5.0",
        "@types/express": "^4.17.11",
        "@types/html-webpack-plugin": "^3.2.4",
        "@types/lodash": "^4.14.167",
        "@types/node": "^14.14.22",
        "@types/react": "^16.8.24",
        "@types/react-dom": "^16.0.5",
        "@types/webpack": "4.1.4",
        "autoprefixer": "^10.1.0",
        "babel-loader": "^8.2.2",
        "concurrently": "^5.3.0",
        "css-loader": "^5.0.1",
        "html-webpack-plugin": "^4.5.1",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.7",
        "postcss-loader": "^4.1.0",
        "postcss-preset-env": "^6.7.0",
        "sass-loader": "^10.1.0",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.0.13",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "webpack": "^5.11.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.1"
    },
    "browserslist": [
        "defaults",
        "not ie < 11",
        "last 2 versions",
        "> 1%",
        "iOS 7",
        "last 3 iOS versions"
    ]
}
